 pipeline {
    agent any

    environment {
        IMAGE_NAME = 'aaditya201/medicure-service'
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                echo 'Running Tests...'
                sh 'mvn test'
            }
        }

        stage('Docker Build & Push') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-credentials') {
                        def dockerImage = docker.build("${IMAGE_NAME}")
                        dockerImage.push()
                    }
                }
            }
        }
    }
}
